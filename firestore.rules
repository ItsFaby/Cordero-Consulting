rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para mensajes de contacto
    match /contactMessages/{messageId} {
      // Permitir que cualquiera pueda crear (escribir) mensajes de contacto
      allow create: if request.auth == null
                    && request.resource.data.name is string
                    && request.resource.data.email is string
                    && request.resource.data.message is string;

      // Solo permitir lectura y actualizaci√≥n al administrador autenticado
      allow read, update, delete: if request.auth != null;
    }

    // Reglas para Reto Playas Costa Rica
    match /playas/{playaId} {
      // Permitir que cualquiera pueda leer las playas
      allow read: if true;

      // Permitir que cualquiera pueda actualizar (para agregar puntuaciones y comentarios)
      allow update: if request.resource.data.id == resource.data.id
                    && request.resource.data.numero == resource.data.numero
                    && request.resource.data.nombre == resource.data.nombre;

      // Solo administradores pueden crear y eliminar playas
      allow create, delete: if request.auth != null;
    }
  }
}
